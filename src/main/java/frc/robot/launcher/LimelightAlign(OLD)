package frc.robot.launcher;

import edu.wpi.first.wpilibj.smartdashboard.SmartDashboard;
import frc.robot.drivetrain.DriveTrain;
import edu.wpi.first.networktables.NetworkTable;
import edu.wpi.first.networktables.NetworkTableEntry;
import edu.wpi.first.networktables.NetworkTableInstance;

import com.revrobotics.CANSparkMax;
import com.revrobotics.ControlType;

import edu.wpi.first.wpilibj.DoubleSolenoid;
import edu.wpi.first.wpilibj.DoubleSolenoid.Value;
import edu.wpi.first.wpilibj.GenericHID.Hand;
import edu.wpi.first.wpilibj.smartdashboard.SmartDashboard;
import frc.robot.Constants;
import frc.robot.Robot;
import edu.wpi.first.wpilibj.DigitalInput;

import com.revrobotics.CANPIDController;

public class LimelightAlign {

    public double x;
    public double y;
    public double area;
    public double leftDrive;
    public double rightDrive;
    public double pivotMotor;

    double kP = -0.1;
    double min = 0.05;

    public LimelightAlign() {

        NetworkTable table = NetworkTableInstance.getDefault().getTable("limelight");
        
        NetworkTableEntry tx = table.getEntry("tx");
        NetworkTableEntry ty = table.getEntry("ty");
        NetworkTableEntry ta = table.getEntry("ta");

        leftDrive = DriveTrain.leftD;
        rightDrive = DriveTrain.rightD;
        // pivotMotor = Pivot.manualControl;
        if (Robot.operatorController.getYButtonPressed()) {

            double xError = -x;
            double yError = y;
            double Adjust;

            if (tx > 1.0) {
                Adjust = (xError * kP) - min;
            } else if (tx < 1.0) {
                Adjust = (xError * kP) + min;
            }
            /*
             * leftDrive+= Adjust; 
             * rightDrive-= Adjust;
             * 
             * AdjustY = (yError * kP);
             * 
             * pivotMotor += AdjustY;
             */
        }

    }

    public void Update() {
    }

    public void NetworkTablesOutput() {
        SmartDashboard.putNumber("LimelightX", x);
        SmartDashboard.putNumber("LimelightY", y);
        SmartDashboard.putNumber("LimelightArea", area);
    }

    public void getDistance() {
    }

}
